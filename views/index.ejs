<div id="bar" data-spy="affix">
  <%- partial('search', data) %>
  <ul id="breadcrumb" class="unstyled">
    <li>Docs</li>
  </ul>
</div>

<div id="index">
  <%- partial('toc', {info: data.rootInfo}) -%>
</div>

<script>
(function () {
  var maxHeight = 0;
  var $els = $('#index ul.nav ul.nav');
  $els.each(function () {
    var h = $(this).height();
    if(h > maxHeight) {
      maxHeight = h;
    }
  });

  $els.height(maxHeight);
})()
</script>