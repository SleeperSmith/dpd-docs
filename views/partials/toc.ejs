<%
function isShallow(d) {
  return d.depth() < 3;
}

function dir(d) {
  if(isShallow(d) && d.children(true)) {
    %>
      <ul class="nav nav-list">
    <%
    %><li><i class="icon-folder-open"></i> <%= d.title() %></li><%
      d.children(true).forEach(dir);
    %>
      </ul>
    <%
  } else if(d.public()) {
    file(d);
  }
}

function file(f) {
  %><li class="clearfix file"><a href="<%= f.url() %>"><i class="icon-<%= (f.dir ? 'folder-close' : 'file') %>"></i> <span><%= f.title() %></span></a></li><%
}

if(data.info) dir(data.info);

%>