<style>
  .active {
    background: red;
  }
</style>
<div id="search" ng-controller="SearchCtrl" class="pull-right">
  <form>
    <input value="<%= data.q || '' %>" placeholder="search" id="search-input" type="text" ng-change="change()" ng-model="input" />
  </form>
  <ul id="search-terms" class="typeahead" ng-show="terms.length">
    <li ng-repeat="term in terms" class="{{ term.active && 'active' }}">
      {{ term.title || term.reference }}
    </li>
  </ul>
</div>

<%- script('search') %>